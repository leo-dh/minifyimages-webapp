{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2017",
    "jsx": "preserve",
    "lib": ["dom", "esnext"],
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "public", ".cache"]
}
